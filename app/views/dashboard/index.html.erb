              <!-- 銷售額 -->
              <div class="col-xxl-4 col-md-6">
                <div class="card info-card revenue-card">

                  <div class="card-body">
                    <h5 class="card-title">銷售額</h5>

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-currency-dollar"></i>
                      </div>
                      <div class="ps-3">
                        <h6>$3,264</h6>
                        <span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                      </div>
                    </div>
                  </div>

                </div>
              </div><!-- End 銷售額 -->

              <!-- 客單價 -->
              <div class="col-xxl-4 col-xl-12">

                <div class="card info-card customers-card">

                  <div class="card-body">
                    <h5 class="card-title">客單價</h5>

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                      </div>
                      <div class="ps-3">
                        <h6>1244</h6>
                        <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">decrease</span>

                      </div>
                    </div>

                  </div>
                </div>

              </div><!-- End 客單價 -->

              <%= render "sales_trend_chart" %>

              <%= render "sale_by_categories_chart" %>

              <%= render "heat_map_chart" %>

            </div>
          </div><!-- End Left side columns -->

          <!-- Right side columns -->
          <div class="col-lg-4">

            <!-- 開發進度 -->
            <div class="card">

              <div class="card-body">
                <h5 class="card-title">開發進度</h5>

                <div class="activity">

                  <div class="activity-item d-flex">
                    <div class="activite-label">12/18</div>
                    <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                    <div class="activity-content">
                      專題網站成立
                    </div>
                  </div><!-- End activity item-->

                  <div class="activity-item d-flex">
                    <div class="activite-label">12/16</div>
                    <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                    <div class="activity-content">
                      計畫：專題網站的內容定案
                    </div>
                  </div><!-- End activity item-->

                  <div class="activity-item d-flex">
                    <div class="activite-label">12/13</div>
                    <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                    <div class="activity-content">
                      三個小組的研究議題定案
                    </div>
                  </div><!-- End activity item-->

                  <div class="activity-item d-flex">
                    <div class="activite-label">12/8</div>
                    <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                    <div class="activity-content">
                      各組員提案的探討、整合與分組
                    </div>
                  </div><!-- End activity item-->

                  <div class="activity-item d-flex">
                    <div class="activite-label">12/4</div>
                    <i class='bi bi-circle-fill activity-badge text-muted align-self-start'></i>
                    <div class="activity-content">
                      所有組員各自尋找想研究的主題與方向
                    </div>
                  </div><!-- End activity item-->


                  <div class="activity-item d-flex">
                    <div class="activite-label">11/26</div>
                    <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                    <div class="activity-content">
                      畢業專題團隊：電商組成立
                    </div>
                  </div><!-- End activity item-->



                </div>

              </div>
            </div><!-- End 開發進度 -->

            <!-- 銷售比例 -->
            <%= render "dount_chart" %>
            <!-- End 銷售比例 -->

            <!-- 賣家排行 -->
            <%= render 'seller_rank' %>
            <!-- End 賣家排行 -->

          </div><!-- End Right side columns -->

        </div>
      </section>


